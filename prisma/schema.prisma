// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x", "darwin-arm64"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id                Int
  licence           Int
  gender            Gender
  firstname         String
  lastname          String
  ranking           String
  club              String
  category          String
  worldRanking      Int
  nationality       String
  pointsHistory     NumericPoints[]
  results           IndividualResult[] @relation("member")
  resultsAsOpponent IndividualResult[] @relation("memberopponent")

  @@unique([id, licence])
}

enum Gender {
  MEN
  WOMEN
}

model NumericPoints {
  memberId                Int
  memberLicence           Int
  date                    DateTime @default(now()) @db.Date
  member                  Member   @relation(fields: [memberId, memberLicence], references: [id, licence])
  points                  Float
  ranking                 Int?
  rankingWI               Int?
  rankingLetterEstimation String?

  @@id([memberId, memberLicence, date])
}

model IndividualResult {
  id                    Int             @id
  date                  DateTime        @default(now()) @db.Date
  memberId              Int
  memberLicence         Int
  opponentId            Int
  opponentLicence       Int
  opponentRanking       String
  memberRanking         String
  memberPoints          Float?
  opponentPoints        Float?
  result                Result
  score                 String
  competitionCoef       Int
  competitionType       CompetitionType
  competitionName       String
  diffPoints            Float
  pointsToAdd           Float
  looseFactor           Float
  definitivePointsToAdd   Float
  member                Member          @relation("member", fields: [memberId, memberLicence], references: [id, licence])
  memberOpponent        Member          @relation("memberopponent", fields: [opponentId, opponentLicence], references: [id, licence])
}

enum CompetitionType {
  TOURNAMENT
  CHAMPIONSHIP
}

enum Result {
  VICTORY
  DEFEAT
}
