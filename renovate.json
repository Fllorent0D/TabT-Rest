{
  "extends": [
    "config:base",
    ":pinAllExceptPeerDependencies"
  ],
  "schedule": ["after 10pm and before 5:00am"],
  "commitMessagePrefix": ":arrow_up: ",
  "automergeType": "pr",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ]
}
